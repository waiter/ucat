.card-all {
  display: flex;
  flex-direction: row;
}

.card_view {
  width: 450rpx;
  background-color: #fff;
  margin: 20rpx 20rpx 30rpx;
}

.card_pic {
  width: 450rpx;
  height: 768rpx;
}

.card_copy {
  width: 450rpx;
  border-radius: 0;
  font-size: 30rpx;
}